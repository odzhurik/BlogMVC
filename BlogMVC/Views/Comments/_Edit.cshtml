@model Entities.Comment

    <div class="form-horizontal">
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID,new { id="CommentID"})
        <div class="form-group">
            <label class="control-label col-md-4 col-md-offset-3">Редактирование комментария</label>
            @Html.Hidden("Time", DateTime.Now, new { id = "CommentTime" })
        </div>

        <div class="form-group">
            @Html.Hidden("PostID", Model.PostID, new { id = "PostID" })

        </div>
        <div class="form-group">
          
            <div class="col-md-10 col-md-offset-4">
                @Html.TextAreaFor(model => model.Text,  htmlAttributes : new { @class = "form-control", id="CommentText", @style = "width : 400;height: 100px;" } )
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Редактировать" class="btn btn-success" id="EditCommentBtn"/>
            </div>
        </div>
    </div>


