@model Entities.Comment

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
               <div class="col-md-12 col-md-offset-4">
            @Html.TextAreaFor(model => model.Text, htmlAttributes: new { @class = "form-control", id = "CommentText", @style= "width : 400;height: 100px;" })
            @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
        </div>
    </div>

</div>
<div class="form-group">
    @Html.Hidden("Time", @DateTime.Now, new { id = "Time" })
</div>
<div class="form-group">
    @Html.Hidden("PostID", (int)ViewBag.PostID, new { id = "PostID" })
    @Html.Hidden("UserID", (int)ViewBag.UserID, new { id="UserID"})

</div>

<div class="form-group">
    <div class="col-md-offset-4 col-md-10">
        <input type="submit" value="Comment" class="btn btn-info" id="CreateBtn" />
    </div>
</div>



